<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/images"
        android:visibility="gone"
        />


    <LinearLayout
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Team A"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/scoretxtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textSize="30dp" />




        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="0"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textSize="30dp"></TextView>


        <TextView
            android:id="@+id/wickettxtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wicket"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textSize="30dp" />





        <TextView
            android:id="@+id/wicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0"
            android:fontFamily="casual"
            android:paddingLeft="10dp"
            android:textSize="30dp" />





        <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="1+"
        android:onClick="add1"
        android:fontFamily="casual"
        android:textSize="20dp" />

        <Button
            android:id="@+id/add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="2+"
            android:onClick="add2"
            android:fontFamily="casual"
            android:textSize="20dp" />



        <Button
            android:id="@+id/add3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="3+"
            android:onClick="add3"
            android:fontFamily="casual"
            android:textSize="20dp" />



        <Button
            android:id="@+id/wicketbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Wicket"
            android:onClick="wicketA"
            android:fontFamily="casual"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/teamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Team B"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/Scoretxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="score"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:paddingLeft="10dp"/>



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="0"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:paddingLeft="10dp"></TextView>

        <TextView
            android:id="@+id/wickettxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Wicket"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/wicketB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="0"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:paddingLeft="10dp"/>


        <Button
            android:id="@+id/badd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="1+"
            android:onClick="badd1"
            android:fontFamily="casual"
            android:textSize="20dp" />

        <Button
            android:id="@+id/badd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="2+"
            android:onClick="badd2"
            android:fontFamily="casual"
            android:textSize="20dp" />



        <Button
            android:id="@+id/badd3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="3+"
            android:onClick="badd3"
            android:fontFamily="casual"
            android:textSize="20dp" />




        <Button
            android:id="@+id/wicketbtnb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Wicket"
            android:onClick="wicketB"
            android:fontFamily="casual"
            android:textSize="20dp" />



    </LinearLayout>


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="reset"
        android:fontFamily="casual"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"/>


</RelativeLayout>

